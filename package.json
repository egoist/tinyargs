{
  "name": "tinyargs",
  "version": "0.1.1",
  "description": "A tiny and flexible command-line argument parser for Node.js and Deno.",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "/src",
    "/mod.ts"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm --target node14",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "pnpm run build && uvu -r sucrase/register --ignore fixture",
    "test-cov": "c8 npm run test",
    "prepublishOnly": "pnpm run build-fast"
  },
  "license": "MIT",
  "devDependencies": {
    "@egoist/prettier-config": "1.0.0",
    "c8": "^7.10.0",
    "prettier": "2.5.1",
    "sucrase": "3.20.3",
    "tsup": "5.11.1",
    "typescript": "4.5.3",
    "uvu": "0.5.2"
  },
  "engines": {
    "node": ">=14"
  }
}
